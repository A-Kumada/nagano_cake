<div class="container">

  <div class="row">
    <div class="col-md-6 offset-1 pb-3 ">
      <h4><strong>注文履歴一覧</strong></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <table class='table table-bordered border-dark'>
        <tr class="table-secondary">
          <td scope="col" style="width: 15%">注文日</td><td scope="col" style="width: 40%">配送先</td>
          <td scope="col" style="width: 20%">注文商品</td><td scope="col" style="width: 10%">支払金額</td><td scope="col" style="width: 15%">注文詳細</td>
        </tr>
        <% @orders.each do |order| %>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>〒<%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
          <td><% order.order_details.each do |cart_item| %>
				     	<%= cart_item.item.name %><br>
				      <% end %></td>
          <td><%= order.total_payment.to_s(:delimited) %>円</td>
          <td><%= link_to "表示する",order_path(order),class:"btn btn-primary" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
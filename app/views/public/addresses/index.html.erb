<div class="container">

  <div class="row">
    <div class="col-md-5 offset-1 pb-4">
      <h4>配送先登録/一覧</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-11">
      <%= form_with model: @address, url: addresses_path do |f| %>
      <table>
        <tr><td width="220" class="pb-2">郵便番号(ハイフンなし)</td><td class="pb-2"><%= f.text_field :postal_code %></td></tr>
        <tr><td class="pb-2">住所</td><td class="pb-2"><%= f.text_field :address, :size=>"50" %></td></tr>
        <tr><td class="pb-2">宛名</td><td><%= f.text_field :name %></td><td class="pb-2"><%= f.submit "新規登録" ,class:"btn btn-success" %></td></tr>
    </table>
    <% end %>
    </div>
  </div>

  <div class="row pt-5">
    <div class="col-md-9">
    <table class="table table-bordered">
    <tr class="table-secondary">
      <td scope="col" style="width: 10%">郵便番号</td><td scope="col" style="width: 30%">住所</td>
      <td scope="col" style="width: 10%">宛名</td><td scope="col" style="width: 20%"></td>
    </tr>
     <% @addresses.each do |address| %>
    <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>

    <td>
      <%= link_to "編集する", edit_address_path(address),class:"btn btn-success" %>
      <%= link_to "削除する", address_path(address), method: :delete, class:"btn btn-danger","data-confirm" => "本当に削除しますか？" %>
    </td>
    <% end %>
    </tr>
    </table>
    </div>
  </div>
</div>
<div class="container">

  <div class="row">
    <div class="col-md-2 ">
      <div class="border border-dark">
      <table>
      <tr><th>ジャンル検索</th></tr>
      <% @genres.each do |genre| %>
      <tr>
      <td class="pb-2 pl-2">
      <%= link_to admin_genre_path(genre) do %>
      <%= genre.name %></td>
      <% end %>
      <% end %>
      </tr>
      </table>
      </div>
    </div>

    <div class="col-md-9 ml-5">
      <h3>商品一覧(全<%= Item.count %>件)</h3><br>
      <div class="d-flex flex-wrap">
      <% @items.each do |item| %>
      <div class="rounded pb-5 pr-3">
      <%= link_to item_path(item) do %>
      <%= image_tag item.get_image(180,180) %>
      <% end %>
      <p><%= item.name %></p>
      <p>¥<%= item.price.to_s(:delimited) %></p>
      </div>
      <% end %>
      </div>
      <div>
      <%= paginate @items %>
      </div>

    </div>
  </div>
</div>
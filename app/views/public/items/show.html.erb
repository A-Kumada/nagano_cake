<div class="container">

  <div class="row pt-5">
    <div class="col-md-2 pr-5">
      <div class="border border-dark">
      <table>
      <tr><th>ジャンル検索</th></tr>
      <% @genres.each do |genre| %>
      <tr>
      <td class="pl-3 pb-3">
      <%= link_to admin_genre_path(genre) do %>
      <%= genre.name %></td>
      <% end %>
      <% end %>
      </tr>
      </table>
      </div>
    </div>

    <div class="col-md-3">
      <%= image_tag @item.get_image(250,250) %>
    </div>

    <div class="col-md-5 pl-5">
      <h3 class="pb-2"><strong><%= @item.name %></strong></h3>
      <h5><%= @item.introduction %><h5>
      <br><br><br><br>
      ￥<%= (@item.price*1.1).floor.to_s(:delimited) %>(税込)<br><br>

     <%= form_with model: @cart_item, url: cart_items_path do |f| %>
     　<%= f.hidden_field :item_id, :value => @item.id %>
       <%= f.select :amount,*[1..10] %>
       <%= f.submit "カートに入れる",class:"btn btn-success ml-5" %>
     <% end %>
    </div>
  </div>
</div>
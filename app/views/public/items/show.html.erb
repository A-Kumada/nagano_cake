<div class="container">

  <div class="row pt-5">
    <div class="col-md-2">
      <p>ジャンル検索</p>
      <% @genres.each do |genre| %>
      <p><%= genre.name %></p>
      <% end %>
    </div>

    <div class="col-md-5">
      <%= image_tag @item.get_image(250,250) %>
    </div>

    <div class="col-md-5">
      <h3><strong><%= @item.name %></strong></h3>
      <h5><%= @item.introduction %><h5>
      <br><br><br><br>
      ￥<%= (@item.price*1.1).floor.to_s(:delimited) %>(税込)<br><br>

     <%= form_with model: @cart_item, url: cart_items_path do |f| %>
     　<%= f.hidden_field :item_id, :value => @item.id %>
       <%= f.select :amount,*[1..10] %>
       <%= f.submit "カートに入れる",class:"btn btn-success ml-5" %>
     <% end %>
    </div>
  </div>
</div>
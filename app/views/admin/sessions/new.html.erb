<div class="container">

  <div class="row">
  <div class="cl-3">
    <h4 class="pb-3">管理者ログイン</h4>
  </div>
  </div>

  <div class="row">
    <%#div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6"%>
   <div class="mx-auto col-md-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field text-right">
    <%= f.label :メールアドレス %><br><br>
    <%= f.label :パスワード %>
    </div>
  </div>

  <div class="mx-auto col-md-7">
    <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder=>"sample@example", :size=>"50" %><br><br>
    <%= f.password_field :password, autocomplete: "current-password", :size=>"50" %>
    </div>
  <%# if devise_mapping.rememberable? %>
    <%#div class="field">
      <%= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <%#/div>
  <% end %>
  <br>
  <div class="actions">
    <%= f.submit "ログイン",class:"btn btn-primary" %>
  </div>
<% end %>

  </div>
  </div>
</div>

<%= render "admin/shared/links" %>

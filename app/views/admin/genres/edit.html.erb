<div class="container">
  <div class='row'>
    <div class="col-8 offset-1 pb-5">
      <h5>ジャンル編集</h5>
    </div>
  </div>

  <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |genre| %>

  <div class='row'>
    <div class="col-1.5 pr-5"><p>ジャンル名</p></div>
    <div class="col-2"><%= genre.text_field :name %></div>
    <div class="col-2 pl-5"><%= genre.submit '変更を保存',class:"btn btn-success" %></div>
    <% end %>
  </div>
</div>
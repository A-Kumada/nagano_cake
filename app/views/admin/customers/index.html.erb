<div class="container">

  <div class="row">
      <div class="col-md-11 pb-2">
        <h4>会員一覧</h4>
      </div>
  </div>

  <div class="row">
      <div class="col-md-9 offset-1">
        <table class="table table-hover table-inverse">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
            </tr>

            <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to admin_customer_path(customer) do %>
              <%= customer.last_name %><%= customer.first_name %>
              <% end %></td>
              <td><%= customer.email %></td>
              <td><% if customer.is_active == true %>
                  <%= "有効" %>
                  <% else %>
                  <%= "退会" %>
                  <% end %></td>
            </tr>

            <% end %>
        </table>
      </div>
      <div class="col-md-3 offset-5">
        <div><%= paginate @customers %></div>
      </div>
  </div>
</div>

<div class="container">

  <div class="row">
    <div class="col-md-11 pb-3 offset-1">
      <h4>商品新規登録</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 pt-2 offset-3">
      <%= form_with model: @item, url: admin_items_path  do |f| %>
      <table>
      <tr><td width="170" class="pb-2">商品画像</td><td><p><%= f.file_field :image, accept: "image/*" %></p></td></tr>
      <tr><td class="pb-2">商品名</td><td class="pb-3"><%= f.text_field :name, :size=>"30",:placeholder=>"商品名" %></td></tr>
      <tr><td>説明</td><td><%= f.text_area :introduction, :size=>"30x5", :placeholder=>"ここに説明文を記述します" %></p></td></tr>
      <tr><td>ジャンル</td><td class="pb-3"><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: '--選択してください--'%></td></tr>
      <tr><td>税抜価格</td><td class="pb-3"><%= f.text_field :price, :size=>"30", :placeholder=>"1000" %>円</td></tr>
      <tr><td>販売ステータス</td>
      <td class="pb-3">
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中" %>
      </td></tr>
      </table>
    </div>
    </div>

    <div class="text-center">
      <%= f.submit "新規登録", class:"btn btn-success btn-lg" %>
      <% end %>
    </div>
</div>

<div class="container">
  <div class='row'>
      <div class='col-8 offset-1'>
        <h5 class="pb-5">商品詳細</h5>
      </div>
  </div>

  <div class='row'>
    <div class="col-md-4">
      <%= image_tag @item.get_image(200,200) %>
    </div>
    <div class="col-md-1.5">
      <p>商品名</p>
      <p>商品説明</p>
      <p>ジャンル</p>
      <p>販売価格<br>(税抜き価格)</p>
      <p>販売ステータス</p>
    </div>

    <div class="col-md-6">
      <p><%= @item.name %></p>
      <p><%= @item.introduction %></p>
      <p><%=@item.genre.name %></p>
      <p><%= (@item.price*1.1).floor.to_s(:delimited) %>(<%= (@item.price).floor.to_s(:delimited) %>)円</p>
      <p>
      <% if @item.is_active == true %>
      <%= "販売中" %>
      <% else %>
      <%=  "売り切れ" %>
      <% end %> </p>
    </div>
  </div>

  <div class="text-center">
    <%= link_to "編集する", edit_admin_item_path(@item),class:"btn btn-success btn-lg" %>
  </div>
</div>
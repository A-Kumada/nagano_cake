<div class="container">
  <div class='row'>
      <div class='col-8 offset-1'>
        <h5 class="pb-5">商品詳細</h5>
      </div>
  </div>

  <div class='row'>
    <div class="col-md-4">
      <%= image_tag @item.get_image(220,220) %>
    </div>
    <div class="col-md-7">
      <table>
        <tr><td width="150 pb-3">商品名</td><td class="pb-3"><%= @item.name %></td></tr>
        <tr><td class="pb-3">商品説明</td><td class="pb-3"><%= @item.introduction %></td></tr>
        <tr><td class="pb-3">ジャンル</td><td class="pb-3"><%=@item.genre.name %></td></tr>
        <tr><td class="pb-3">販売価格<br>(税抜き価格)</td><td class="pb-3"><%= (@item.price*1.1).floor.to_s(:delimited) %>(<%= (@item.price).floor.to_s(:delimited) %>)円</td></tr>
        <tr><td class="pb-5">販売ステータス</td>
            <td class="pb-5"><% if @item.is_active == true %>
                <%= "販売中" %>
                <% else %>
                <%=  "売り切れ" %>
                <% end %>
            </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="text-center">
    <%= link_to "編集する", edit_admin_item_path(@item),class:"btn btn-success btn-lg" %>
  </div>
</div>